---
interface Props {
  slug: string
  title: string
  description: string
}

const { slug, title, description } = Astro.props
---

<a
  href={`/post/${slug}`}
  class='block box-border mb-8 p-4 rounded-lg transition-colors hover:bg-gray-200 dark:hover:bg-gray-800'
>
  <h4 class='mb-2 text-lg font-medium text-gray-900 md:text-xl dark:text-gray-100'>{title}</h4>
  <p class='text-gray-600 dark:text-gray-400'>{description}</p>
</a>

---
import type { Frontmatter } from '@/types'

const { slug, title, description, minutesRead } = Astro.props as Frontmatter
---

<a
  href={`/blog/${slug}`}
  class='flex flex-col mb-4 p-2 sm:p-4 rounded-lg transition-[background-color] text-gray-600 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-800'
  rel='prefetch'
>
  <span class='flex justify-between items-center mb-1'>
    <h3 class='text-lg md:text-xl text-gray-900 dark:text-gray-100'>{title}</h3>
    <span class='shrink-0'>{minutesRead}</span>
  </span>
  <p class='line-clamp-2'>{description}</p>
</a>

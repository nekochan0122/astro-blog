---
import ThemeToggle from './ThemeToggle'
import { cx } from '@/lib/utils'

const items = [
  { name: 'Home', url: '/' },
  { name: 'Blog', url: '/blog/' },
  { name: 'Snippets', url: '/snippets/' },
  { name: 'RSS', url: '/rss.xml' },
  { name: 'Portfolio', url: 'https://neko-portfolio.vercel.app' },
  { name: 'GitHub', url: 'https://github.com/NekoChanTaiwan' },
]
---

<nav
  class='flex items-center justify-between w-full max-w-2xl border-gray-200 dark:border-gray-700 mx-auto py-4 sm:py-8 sm:pb-16 text-gray-900 dark:text-gray-100'
>
  <div class='ml-[-0.60rem]'>
    {
      items.map(({ name, url }) => (
        <a
          href={url}
          class={cx(
            'inline-block px-3 py-2 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-800 transition-colors',
            Astro.url.pathname === url ? 'text-gray-800 dark:text-gray-200' : 'text-gray-300'
          )}
          {...(url.startsWith('http') ? { target: '_blank', rel: 'noopener noreferrer' } : { rel: 'prefetch' })}
        >
          {name}
        </a>
      ))
    }
  </div>
  <ThemeToggle client:load />
</nav>
